<AnchorPane fx:id="rootPane" prefHeight="522.0" prefWidth="452.0" stylesheets="@../resources/common.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schoollibrary.ui.setting.SettingController">
