                  <Insets top="10.0" />
               </padding>
               <font>
                  <Font name="Roboto Condensed Regular" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="30.0" />
               </VBox.margin>
            </JFXPasswordField>
            <JFXTextField fx:id="no_of_days" focusColor="#2962ff" labelFloat="true" layoutX="60.0" layoutY="255.0" promptText="No of days member can keep the book" unFocusColor="#03a9f4">
               <font>
                  <Font name="Roboto Condensed Regular" size="20.0" />
               </font>
               <padding>
                  <Insets top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="30.0" />
               </VBox.margin>
            </JFXTextField>
            <HBox prefHeight="82.0" prefWidth="414.0" stylesheets="@../resources/common.css">
               <children>
                  <JFXButton fx:id="saveButton" onAction="#saveSetting" prefHeight="38.0" prefWidth="83.0" text="Save" textAlignment="CENTER">
                     <font>
                        <Font name="Roboto Condensed Regular" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="90.0" top="15.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="cancelButton" onAction="#cancel" prefHeight="38.0" prefWidth="83.0" text="Cancel" textAlignment="CENTER">
                     <font>
                        <Font name="Roboto Condensed Regular" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="80.0" top="15.0" />
                     </HBox.margin>
                  </JFXButton>
