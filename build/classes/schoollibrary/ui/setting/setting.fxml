               </padding>
               <font>
                  <Font name="Roboto Condensed Bold" size="35.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <JFXTextField fx:id="u_name" focusColor="#2962ff" labelFloat="true" promptText="UserName" unFocusColor="#03a9f4">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Roboto Condensed Regular" size="20.0" />
               </font>
            </JFXTextField>
            <JFXPasswordField fx:id="passoword" focusColor="#2962ff" labelFloat="true" promptText="Password" unFocusColor="#03a9f4">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
               <font>
                  <Font name="Roboto Condensed Regular" size="20.0" />
               </font>
            </JFXPasswordField>
            <JFXPasswordField fx:id="c_password" focusColor="#2962ff" labelFloat="true" layoutX="60.0" layoutY="190.0" promptText="Confirm Password" unFocusColor="#03a9f4">
